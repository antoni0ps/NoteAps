<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add.Add_Note_Activity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/noteSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Guardar"
        android:fontFamily="@font/roboto"
        android:background="@drawable/gradient_background_border"
        android:textColor="@color/darker_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:translationZ="2dp"/>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Título"
        android:textColor="@color/dark_grey"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/noteSaveButton" />

    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="start"
        android:textColor="@color/dark_grey"
        android:hint="Descripción"
        android:autoSizeMaxTextSize="500dp"
        android:textStyle="italic"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/etTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>